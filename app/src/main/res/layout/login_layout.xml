<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|bottom"
    android:orientation="vertical"
    android:paddingLeft="50dp"
    android:paddingRight="50dp">


    <com.hg.ui.view.RoundLinearlayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        app:bgColor="#3CFFFFFF"
        app:roundRadius="60dp"
        app:strokeColor="#00FFFFFF"
        app:strokeWidth="1px">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/user" />

        <EditText
            android:id="@+id/login_user_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:padding="0dp"
            android:textColor="#fff"
            android:textColorHint="#DDDDDD"
            android:textSize="14sp" />
    </com.hg.ui.view.RoundLinearlayout>

    <com.hg.ui.view.RoundLinearlayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        app:bgColor="#3CFFFFFF"
        app:roundRadius="60dp"
        app:strokeColor="#00FFFFFF"
        app:strokeWidth="1px">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/password" />

        <EditText
            android:id="@+id/login_user_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:padding="0dp"
            android:textColor="#fff"
            android:textColorHint="#DDDDDD"
            android:textSize="14sp" />
    </com.hg.ui.view.RoundLinearlayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <com.hg.ui.view.RoundLinearlayout
            android:id="@+id/login_layout_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:bgColor="#03A9F4"
            app:roundRadius="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录"
                android:textColor="#fff"
                android:textSize="14sp" />
        </com.hg.ui.view.RoundLinearlayout>

        <com.hg.ui.view.RoundLinearlayout
            android:id="@+id/login_layout_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:bgColor="#fff"
            app:roundRadius="60dp"
            app:strokeColor="#03A9F4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册"
                android:textColor="#03A9F4"
                android:textSize="14sp" />
        </com.hg.ui.view.RoundLinearlayout>
    </LinearLayout>

    <TextView
        android:id="@+id/login_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:text="无法登陆/忘记密码？"
        android:textColor="#fff" />
</LinearLayout>

